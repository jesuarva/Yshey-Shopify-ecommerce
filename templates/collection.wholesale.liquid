      {% for t in tags %}
        {% assign tag = t | strip %}
        {% if current_tags contains tag %}
          <option value="{{ tag | handle }}" data-class="{{ tag | handle }}" selected>{{ tag }}</option>
        {% elsif collection.all_tags contains tag %}
          <option value="{{ tag | handle }}" data-class="{{ tag | handle }}">{{ tag }}</option>
        {% endif %}
      {% endfor %}
    </select>
  </fieldset>

 
